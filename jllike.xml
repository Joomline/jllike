<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="content" method="upgrade">
	<name>JoomLine Like</name>
	<author>JoomLine</author>
	<creationDate>Mar 2012</creationDate>
	<copyright>(C) 2012 by Vadim Kunicin(http://www.joomline.ru)</copyright>
	<license>GNU/GPL: http://www.gnu.org/copyleft/gpl.html</license>
	<authorEmail>vadim@joomline.ru</authorEmail>
	<authorUrl>http://joomline.ru</authorUrl>
	<version>1.1.3</version>
	<description>Plugin allow integrate social buttons like into your joomla site</description>
	<files>
		<folder>js</folder>
		<folder>models</folder>
		<filename plugin="jllike">jllike.php</filename>
		<filename>index.html</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="autoAdd" type="radio" default="0" label="Автодобавление" description="Укажите нужно ли автоматически добавлять форму комментариев к каждой статье">
				  <option value="0">Нет</option>
				  <option value="1">Да</option>
				</field>
				<field name="categories" type="category" extension='com_content' default="0" multiple="multiple"
						label="Исключить категории"
						description="Укажите категории в которых не будет добавляться виджет комментариев"/>
				<field name="pathbase" type="text" label="Укажите приоритетный домен" default="0" description="Укажите приоритетный домен: www.ваш_домен.ru - c www, либо ваш_домен.ru - без www."/>
				<field name="addfacebook" type="radio" default="1" label="Включить facebook" description="">
				  <option value="0">Нет</option>
				  <option value="1">Да</option>
				</field>
				<field name="addvk" type="radio" default="1" label="Включить Vkontakte" description="">
				  <option value="0">Нет</option>
				  <option value="1">Да</option>
				</field>
				<field name="addtw" type="radio" default="1" label="Включить twitter" description="">
				  <option value="0">Нет</option>
				  <option value="1">Да</option>
				</field>
				<field name="addod" type="radio" default="1" label="Включить Odnoklassniki" description="">
				  <option value="0">Нет</option>
				  <option value="1">Да</option>
				</field>
				<field name="addgp" type="radio" default="1" label="Включить google+" description="">
				  <option value="0">Нет</option>
				  <option value="1">Да</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
</extension>
